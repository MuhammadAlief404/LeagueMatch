<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailMatchFragment">

    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/card">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageButton
                    android:layout_width="91dp"
                    android:layout_height="99dp"
                    tools:src="@tools:sample/avatars"
                    android:id="@+id/imageButton"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="40dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/home_card_detail_match"
                    android:contentDescription="@string/home_logo"/>

            <ImageButton
                    android:layout_width="91dp"
                    android:layout_height="91dp"
                    tools:src="@tools:sample/avatars"
                    android:id="@+id/imageButton2"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="40dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/away_card_detail_match"
                    android:contentDescription="@string/away_logo"/>

            <TextView
                    tools:text="Home Team"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/home_card_detail_match"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="40dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                    tools:text="Away Team"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/away_card_detail_match"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="40dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                    tools:text="8 : 8"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textSize="46sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/score_card_detail_match"
                    app:layout_constraintEnd_toStartOf="@+id/imageButton2"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toEndOf="@+id/imageButton"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
            tools:text="Event Name"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/event_detail_match"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            style="@style/TextAppearance.AppCompat.Title"
            app:layout_constraintTop_toBottomOf="@+id/card"/>

    <ImageView
            android:layout_width="91dp"
            android:layout_height="91dp"
            tools:src="@tools:sample/avatars"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/league_detail_match"
            android:contentDescription="@string/home_logo"/>

    <ImageView
            android:layout_width="91dp"
            android:layout_height="91dp"
            tools:src="@tools:sample/avatars"
            android:id="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/league_detail_match"
            android:contentDescription="@string/away_logo"/>

    <TextView
            tools:text="Away Team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/away_detail_match"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"/>

    <TextView
            tools:text="Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/home_score_detail_match"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/away_score_detail_match"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/home_detail_match"/>

    <TextView
            tools:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/league_detail_match"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/event_detail_match"/>

    <TextView
            tools:text="Formation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/away_formation_detail_match"
            app:layout_constraintStart_toEndOf="@+id/home_formation_detail_match"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.497"/>

    <TextView
            tools:text="Shoots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/away_shoots_detail_match"
            app:layout_constraintStart_toEndOf="@+id/home_shoots_detail_match"
            android:layout_marginStart="8dp"/>

    <TextView
            tools:text="Red Cards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/red_home_detail_match"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/red_away_detail_match"/>

    <TextView
            tools:text="Yellow Cars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView12"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/yellow_away_detail_match"
            app:layout_constraintStart_toEndOf="@+id/yellow_home_detail_match"
            android:layout_marginStart="8dp"/>

    <TextView
            tools:text="Goal Details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView13"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/goald_away_detail_match"
            app:layout_constraintStart_toEndOf="@+id/goald_home_detail_match"
            android:layout_marginStart="8dp"/>

    <TextView
            tools:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_score_detail_match"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/home_detail_match"
            android:layout_marginTop="8dp"/>

    <TextView
            tools:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/away_score_detail_match"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/away_detail_match"/>

    <TextView
            tools:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_formation_detail_match"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/home_score_detail_match"
            android:layout_marginTop="8dp"/>

    <TextView
            tools:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/away_formation_detail_match"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/away_score_detail_match"/>

    <TextView
            tools:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_shoots_detail_match"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/home_formation_detail_match"/>

    <TextView
            tools:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/away_shoots_detail_match"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/away_formation_detail_match"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>

    <TextView
            tools:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/red_home_detail_match"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/home_shoots_detail_match"/>

    <TextView
            tools:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/red_away_detail_match"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/away_shoots_detail_match"/>

    <TextView
            tools:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yellow_home_detail_match"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/red_home_detail_match"/>

    <TextView
            tools:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yellow_away_detail_match"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/red_away_detail_match"/>

    <TextView
            tools:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/goald_home_detail_match"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/yellow_home_detail_match"/>

    <TextView
            tools:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/goald_away_detail_match"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/yellow_away_detail_match"/>

    <TextView
            tools:text="Home Team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_detail_match"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>

</androidx.constraintlayout.widget.ConstraintLayout>